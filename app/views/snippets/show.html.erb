<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @snippet.content.split[0...15].join(' ') %></h3>
  </div>
  <div class="panel-body">
    <%= @snippet.content %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Share this</h3>
  </div>
  <div class="panel-body">
    <% if @snippet.token? %>
      <%= text_field_tag :url, snippet_url(@snippet.token), class: 'form-control' %>
    <% else %>
      <%= text_field_tag :url, snippet_url(@snippet), class: 'form-control' %>
    <% end %>
  </div>
</div>
